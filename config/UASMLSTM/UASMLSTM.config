[train] #train parameters
epoch = 50
batch_size = 6

grad_accumulation_steps = 1

shuffle =True

reader_num = 1

optimizer = adam
learning_rate = 1e-3
weight_decay = 0
step_size = 1
lr_multiplier = 1

# 恢复训练检查点路径 (可以是相对路径或绝对路径)
resume_checkpoint = best.pt

# 是否只保存模型权重 (不保存完整模型状态)
weights_only_save = true

# 是否保存训练状态（与权重分开保存）
save_training_state = true

[distributed]
use = False
backend = nccl

[eval] #eval parameters
batch_size = 8
shuffle = True
reader_num = 1

[data] #data parameters
train_dataset_type = PreCorrect_UASMLSTM
train_formatter_type = PreCorrect_UASMLSTM
train_data_path = /mnt/h/Data/Train/

valid_dataset_type = PreCorrect_UASMLSTM
valid_formatter_type = PreCorrect_UASMLSTM
valid_data_path = /mnt/h/Data/Valid/

test_dataset_type = PreCorrect_UASMLSTM
test_formatter_type = PreCorrect_UASMLSTM
test_data_path = /mnt/h/Data/Test/


[model] #model parameters
model_name = UASMLSTM

img_height = 576
img_width = 800


seq_length = 4

in_channels = 4
out_channels = 64
num_layers = 4
num_hiddens = 64,64,64,64

layer_norm = True

[output] #output parameters
output_time = 5
test_time = 5

model_path = /mnt/h/Data/checkpoint/
model_name = UASMLSTM


accuracy_method = PrecipitionCorrection
output_function = Precipition

tensorboard_path = /mnt/h/Data/


